<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bg27">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linTop"
        android:padding="20dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="@dimen/h2" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textSize="@dimen/h2"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="@dimen/icon_call"
                android:layout_height="@dimen/icon_call"
                android:src="@drawable/call"
                android:id="@+id/imageView2"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="@dimen/h2" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="@dimen/h2" />
    </LinearLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_below="@+id/linTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="nakthon.soraya.driverry.ServiceActivity"
        android:layout_margin="20dp"
        android:layout_above="@+id/button4" />

    <Button
        android:text="@string/onside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:background="#c8ffffff" />

    <Button
        android:id="@+id/btnGoogleMap"
        android:layout_alignParentRight="true"
        android:text="Google Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>